{% extends '/templates/layout.html.twig' %}

{% block content %}
    <div class="d-flex flex-column h-100 justify-content-center align-items-center">
        <div class="col-3 card">
            <form class="col-12 card-body" action={{ path_for('auth.change') }} method="POST">
                <fieldset class="form-group">
                    <legend class="col-form-legend text-center">New password</legend>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control {{ errors.password ? 'is-invalid' : '' }}" name="password" id="password">
                        {% if errors.password %}
                            <span class="invalid-feedback">{{ errors.password | first }}</span>
                        {% endif %}
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>


                </fieldset>
                {{ csrf.field | raw }}
            </form>

        </div>
    </div>
</div>{% endblock %}
