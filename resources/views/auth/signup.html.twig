{% extends '/templates/layout.html.twig' %}

{% block content %}
    <div class="d-flex flex-column h-100 justify-content-center align-items-center">
        <div class="col-3 card">
            <form class="col-12 card-body" action={{ path_for('auth.signup') }} method="POST">
                <fieldset class="form-group">
                    <legend class="col-form-legend text-center">Sign up</legend>
                    <div class="form-group">
                        <label for="">Email</label>
                        <input type="text" class="form-control {{ errors.email ? 'is-invalid' : '' }}" name="email" id="email" aria-describedby="helpId" placeholder="you@domain.com" value={{ old.email }}>
                        {% if errors.email %}
                            <span class="invalid-feedback">{{ errors.email | first }}</span>
                        {% endif %}
                    </div>
                    <div class="form-group">
                        <label for="">Pseudo</label>
                        <input type="text" class="form-control {{ errors.pseudo ? 'is-invalid' : '' }}" name="pseudo" id="pseudo" aria-describedby="helpId" placeholder="Michel, Jean, Jacques" value={{ old.pseudo }}>
                        {% if errors.pseudo %}
                            <span class="invalid-feedback">{{ errors.pseudo | first }}</span>
                        {% endif %}
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control {{ errors.password ? 'is-invalid' : '' }}" name="password" id="password">
                        {% if errors.password %}
                            <span class="invalid-feedback">{{ errors.password | first }}</span>
                        {% endif %}
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary">Send</button>
                    </div>


                </fieldset>
                {{ csrf.field | raw }}
            </form>

        </div>
    </div>
</div>{% endblock %}
